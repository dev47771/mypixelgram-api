{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/main/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": false,
    "tsConfigPath": "apps/main/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/main",
  "projects": {
    "files-api": {
      "type": "application",
      "root": "apps/files-api",
      "entryFile": "main",
      "sourceRoot": "apps/files-api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/files-api/tsconfig.app.json"
      }
    },
    "main": {
      "type": "application",
      "root": "apps/main",
      "entryFile": "main",
      "sourceRoot": "apps/main/src",
      "compilerOptions": {
        "tsConfigPath": "apps/main/tsconfig.app.json",
        "assets": ["core/mailModule/templates/**/*.hbs", "modules/posts/api/views/*.html"],
        "watchAssets": true
      }
    }
  }
}